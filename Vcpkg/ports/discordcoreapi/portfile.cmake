if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 5ba495992984e520739e17ae6a3094acd8c97814
	SHA512 8f7f6f0afa1b608596c7ad4dddf740017aa491820f7a03a21ac2d6747ecf91ae27320ff75c2142e1b6ca21cbe011455baadb5fc2d590485cadfb5019307aba0b
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

