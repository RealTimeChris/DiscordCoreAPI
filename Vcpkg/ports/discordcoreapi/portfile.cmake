if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 875a67b1f7fd330aca9ce92b6c5e6a322f3a7681
	SHA512 f87ace11a5a6d56a96b3f7c0d621efb8cd052271fc57d0ad5ef55ded1b8eeaf68c0bac12da39309532666920e1ea49e47498d6a362e0337ce510d00296983092
	HEAD_REF main
)

