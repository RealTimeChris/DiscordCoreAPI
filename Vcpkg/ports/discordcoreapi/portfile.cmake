if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 8684cb7b069236c72a425386a03becda0dc8eb93
	SHA512 be53fb1343950fd786d84f67e21f4d7777709e17e943aa7c118b69818df0181ee5e6c89c260c2d07b70ce6cca0a2ad937f8b893710a7c31187954008fd709bd6
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

