vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 071723cfb315660469fbf20fbfe250dd548e4398
	SHA512 89aa1af9e06297b29dd5a5aeaba2aa560d040401f3ada625b4e107696ca0e694a59968a224b41d8e49223bb708978a1855610a90752e43a6c4a9dea21b80d7fa
