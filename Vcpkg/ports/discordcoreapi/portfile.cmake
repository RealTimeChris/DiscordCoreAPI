if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF dbf4ba8892d7e0a6f3abb858cc5beba58b15c232
	SHA512 04b05ec02e13d4c793fb007a1708d939fb6e1a27b8b4b1e47cc69705ec1157e2903848339fb2224f613143f6924b5a157734559907e44026628ed5e574c5a9f4
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

