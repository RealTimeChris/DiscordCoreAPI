if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 494fa3155f37f4665dc605a41803d83f34d60d04
	SHA512 2e1319f4b514a63df7450f17b51d2428b9e86273d1175471bf729ff2a62d14411b09955b11046e7a6c4a107996e81c26d9c4dd16d4300cd3dc062d9df8bd6a06
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

