if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 333e8b65ea02f2480f5bdfbfcc14e34b8a764e5b
	SHA512 b5569b37b43901f9007c2646fc04c628edabd973517884099030656b8d5354da55217c95bb83ae9acbc683a1c05db2375db70e066331197b596bc72295fa8c2f
