if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 98e9f13e46664f1767af14b3289c3c09e0fe9292
	SHA512 41f839298743888f912fc4e5d7437a87c31d1c82b144484fe84b5c31c852e2b6dd551a2a03bb361460617c204ad5164d1eba1a311c42fa39e0f0f680d493754a
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

