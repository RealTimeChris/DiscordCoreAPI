if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF b2b1b2a306db41bf2324f0deff35fe6d1e26925b
	SHA512 59272759325628975e8ff1018f63062a471ee9641d4dc1d79a4aed0d05ac8528b4b9bc797ccbf69bd215b85f1170a5430b4f497e2a7fd7e4ae82472568198b2e
	HEAD_REF main
)

