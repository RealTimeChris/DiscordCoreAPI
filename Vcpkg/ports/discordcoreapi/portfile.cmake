vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF be94065d9aa694bf9304f8fa7e1a88c46d0cc8fe
	SHA512 67d875b0fc734e785d82540054472b7f197f4aedfb1fe12a1cb5d181dc12eaf00a1f45798f737035750d48d7ad1d3c61dd95c98e0a72ade3e1f321f16a66c064
