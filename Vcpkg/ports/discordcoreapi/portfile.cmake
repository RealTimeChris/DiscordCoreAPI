if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF b39368f769e0f6dadadfda6217b90e7a278ed17f
	SHA512 72e549f1b0e9f1a08439bc88ad420d5bc2a2bdb41e0d8cbdae411897713aa45c8e2ab4f809593d373cfcf9d66513052b608bba36267569ff0077335ef0a27545
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

