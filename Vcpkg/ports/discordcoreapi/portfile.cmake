if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 3aa113bacf2e6dcaf731229b074ebba1211dfe10
	SHA512 0ee4c4a6c6c1a470caff00564a40eec63abba122a3c5104666d590868f0bc90c5c8342e07edf4663d94772893eb1ab2752811ba2319c6ca62e3e99790e06d2f1
