if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF ace3a3aeac54b2317fa6b92a8defa189f4442e42
	SHA512 3b81c9298525832a20009a43cb1e460519c3fb90da44a4a93981acbc153cdbbe060918a3c68ad37c261fc840cc75bcc182a98c08287c56e34bdfc6b02d3880b6
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

