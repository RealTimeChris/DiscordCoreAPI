if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 431afc6a7bc412162340bfa82e974af6b5d9a2e9
	SHA512 561a9fb7331d72b4f57b03086398c7c7f9ba396c73d6fc65d32ac737e8527aa0457396b2c6c81e349aaeadeb0cb33bec54faf7559ae38b1b9c32504328bf3b26
