if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 7d931a56b922505385de2c5eb0f4411a5c99c41e
	SHA512 a347e7d14ff32e5a5792123e05a0d11bd499ac32c168fea32dfff1d6cf580a7154b2b39700b8c49821ece8233a013c6df813a0c9d4fa1445907b349bfdc0abf0
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

