if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF d94ea8ccd597abc00ba56dafc49c516c449a7119
	SHA512 75150a920e39483b1f3330af43c8b0cab0e7e9593c4068f1a6f4f2186a23b9d6819ee89e90b8eff9ee811512ff469257515bf460cb2717d492447266c1403588
