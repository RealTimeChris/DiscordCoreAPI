if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF c5df6c5bdf22993cb8c9c923cf77d6a2bce09452
	SHA512 4588f16f4a8ddcc58bd717eb1f0c3ca0260d966502824d1d472d5fae66d55665e1e5257990f8b36c0c6dfab87c40dc362d6ebe4a1a42c35f6d4668fce8122660
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

