if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF dad2c30b02fd25f0ff6b9c5e9be85a7010072b78
	SHA512 fabd39106b2d6c3758453ce430ecd3aa22030385e7e97dbd8bb85d147cde1ec19e4686dc0ad85b6f6e14a2ccd7575c9140e46f438149628913bf3fb51b4f122e
