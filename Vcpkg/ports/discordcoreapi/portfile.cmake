if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 614c67d9c5e1028aa73197776e24cff0cbeb4dc0
	SHA512 2f0a40d7e3e82250271398d4baddbf72caee2d9c6325f5e83495bf3ed569671b749e1216f4a1d9e71f35ec40d97f36206b66b7cb76210932d5b8c17667945ca2
	HEAD_REF main
)

