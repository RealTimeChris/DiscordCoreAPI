if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF ef6f415626554790f734525c8dfa5b6349f205cb
	SHA512 2346520b34776555a273c6059eb4e761de300fc72af40b752875a3a671b1d2643305477cdd6078c9a61e8d4c0042c15f479d23f7e1cfb5f888ab94c130f8d145
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

