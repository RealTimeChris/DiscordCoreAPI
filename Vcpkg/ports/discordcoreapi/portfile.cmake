if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF d72ad7169a833dcde3a60e9b1dd4e4ce0d598019
	SHA512 184f298073f06031a7629b4a8a8076e9f1e80cc7bbd60d276a764339cb1a5aab86e6f6142fe1c259e854af9659f92d34061649f36a435936332a67d75a149b6f
	HEAD_REF main
)

