if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 7a414aba4aaf262142aeb5623d1195c557f6e0b7
	SHA512 aa8a55711e434c6aeb3ea3f87d45e4bf32c66191ea340bcdf7c33ef803d5d8ac036d5b3a48d0759c5ae337f899a0f16f89468911c59703aa5c06af716c514cc3
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

