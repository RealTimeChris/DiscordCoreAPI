if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF af68c1717e03712c170cc245f3db1951c0a70130
	SHA512 5a050d7e912b94a738334279b7828fefdc5c8764c6df82bf0286c5af628ed2103b86331f4174a9e115a1352f2567e766ae110bfe4f33dfe418b938a5b9128f62
	HEAD_REF main
)

