if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 95ffb2af2a03f7a76aadcc83047ec09d7f0187b8
	SHA512 1c099db955460094d0baf781a3c3b233f87fc03c3a33c80b94b539731fe63e86c1d3f420f3c6bd1531a0c9c42e9797ae552a300464138417db21c33911d386ef
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

