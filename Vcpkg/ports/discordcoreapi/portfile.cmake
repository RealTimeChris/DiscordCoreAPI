if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF e2a92972f343619b9b272653042da2c594dd7d35
	SHA512 99156b4e497ee2350e0c45504316989e8ab7fc3f7fb408a04f4f902b50ee746bc59e08695befe490ce5c2ba57be8dff79ab19037c6a291d33e1349fb610f43a4
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

