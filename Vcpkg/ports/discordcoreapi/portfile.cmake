if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 5656635b97a0c70e08be0d4e9c8a54cd51ec467e
	SHA512 5a543befc333374f6a17ddb93ebd1fff697a808245c1f42f492b42b32ab3d7d343b49f764496a18eda1475e84b3fd9675fd13c5f476793193711d576a6cb836b
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

