if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 138d783ec66bd1340291385c79df52c86395bee1
	SHA512 48a53d21cc0f6bbd0d3124b4424f50e7e3e57061a6af1491f2f2902d9d29052e3382c3addfdbfefd1f6d9aac118ebb2dce214760710fe17158ddd1925cdf0444
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

