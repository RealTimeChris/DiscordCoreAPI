if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 10c5b62d861b73e6d7728cc486e3abce3da6c378
	SHA512 d2a3ff13652174493aa42c9127bc35b7160546e352fff6f6e8c3ccff88b3fa32759e7107fe1f51427dd9563d40c1c51a51e0d392ce00726c274a3641e92d1809
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

