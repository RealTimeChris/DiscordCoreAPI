if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 839dcd6c88400a9a708a2a7f61203f84d5bcc360
	SHA512 8de68647712c92444f740471e6ac519d0783dfa7f9e521593b718a968e10bf0c136813afb9ee647a6cdec463004b60089433fa93c61471c83312e52697334bc5
