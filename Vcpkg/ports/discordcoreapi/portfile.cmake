if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF f38cac7fe6724c91d74786f92be2ec0bb9a4c2c6
	SHA512 a19316743bed6dd33f26418d0f919beb844e72979444c55ace8ef835264efebf210935aaa64a4a45c3c7ce79e561b5c5b9ace31396445e45e495cacb71d1dd4a
	HEAD_REF main
)

vcpkg_cmake_configure(
    SOURCE_PATH "${SOURCE_PATH}"
)

vcpkg_cmake_install()

