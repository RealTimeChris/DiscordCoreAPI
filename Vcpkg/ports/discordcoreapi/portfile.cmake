if(VCPKG_TARGET_IS_LINUX)
    message(WARNING "DiscordCoreAPI only supports g++ 11 on linux.")
endif()

vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF 7d6c99dba589618f02ae08830446a3c04059b0e8
	SHA512 3df8cf1f84097457c9f759045ec4d04838c929308b2e48b9fe0d9a16d5d8c11176b0d30dfe763632672d362add9ad482659309af24fe5c4012213bc51a81b647
	HEAD_REF main
)

