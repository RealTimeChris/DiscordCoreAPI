vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO RealTimeChris/DiscordCoreAPI
	REF eb2bfddc1cd981c837bb58238be46cf3e6f9b0a0
	SHA512 e0916a1e5c2bc8ccf9f5772dcd54a5c95b34194410a236657a74ae5ed6376f0f03a121945ff91ef14c2948efa3d4bc854fbe3f5125e59bf8cb99527fa7a8b6c8
